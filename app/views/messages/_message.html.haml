.chat-main__message-list--block{data: {message: {id: message.id}}}
  .block-name
    .block-name__left
      = message.user.name
    .block-name__right
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .block-message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?